{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "target": "es2017",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "plugin": ["typedoc-plugin-markdown"],
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "includeDeclarations": true,
    "hideBreadcrumbs": true,
    "hideSources": true,
    "theme": "docusaurus2"
  }
}
